{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireBranch": false,
    "push": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["npm run type-check", "npm test"],
    "after:bump": "npm run build"
  }
}
